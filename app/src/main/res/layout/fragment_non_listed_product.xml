<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hackerkernel.storemanager.fragment.NonListedProductFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical"
            android:id="@+id/layout">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/layoutCustomerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    style="@style/TextLabel"
                    android:id="@+id/customerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/customer_name" />
            </android.support.design.widget.TextInputLayout>


            <Button
                android:layout_below="@id/layoutCustomerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_more"
                android:id="@+id/addMore"
                android:background="@drawable/primary_button"
                android:textColor="@color/iconColor"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete"
                android:id="@+id/delete"
                android:layout_alignTop="@+id/addMore"
                android:layout_toRightOf="@+id/addMore"
                android:layout_toEndOf="@+id/addMore"
                android:background="@drawable/white_button"
                android:textColor="@color/primaryColor"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"/>

            <!-- Product info container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout"
                android:layout_below="@id/addMore"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

            <include layout="@layout/include_non_listed_product_info"/>

            </LinearLayout>
            <!-- /product info container -->

            <!-- sold by area -->
            <TableLayout
                android:id="@+id/salesmanSpinnerContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1"
                android:layout_below="@+id/linearLayout"
                android:layout_marginBottom="10dp">

                <TableRow>
                    <TextView
                        android:text="Sold By"
                        android:padding="3dp"
                        android:layout_gravity="center"
                        android:textColor="@color/primaryColor"
                        />
                    <Spinner
                        android:id="@+id/salesmanSpinner"
                        />
                </TableRow>

            </TableLayout>
            <!-- / sold by area -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/done"
                android:text="@string/done"
                android:textColor="@color/iconColor"
                android:background="@drawable/primary_button"
                android:layout_below="@id/salesmanSpinnerContainer" />

        </RelativeLayout>

    </ScrollView>
