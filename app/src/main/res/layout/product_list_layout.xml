<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:padding="10dp"
    android:background="@drawable/product_list_background"
    android:clickable="true">
    
    <ImageView
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:id="@+id/productImage"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primaryTextColor"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:text="Inblue 9116"
        android:id="@+id/productName"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/productImage"
        android:layout_toEndOf="@+id/productImage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/secondaryTextColor"
        android:text="9116"
        android:id="@+id/productCode"
        android:layout_alignBottom="@+id/productImage"
        android:layout_alignLeft="@+id/productName"
        android:layout_alignStart="@+id/productName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/secondaryTextColor"
        android:text="24/10/15"
        android:id="@+id/productTime"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>